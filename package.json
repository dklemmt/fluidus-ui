{
  "name": "fluidus-ui",
  "version": "0.0.1",
  "description": "Fluidus UI Design System",
  "author": {
    "name": "Dirk Klemmt"
  },
  "license": "MIT",
  "repository": "",
  "private": true,
  "scripts": {
    "build": "npm run build:tokens && npm run build:core && npm run build:react",
    "build:core": "npm run build --workspace=packages/core",
    "build:react": "npm run build --workspace=packages/react",
    "build:tokens": "npm run build --workspace=packages/tokens",
    "build-storybook": "npm run storybook:build --workspace=packages/react",
    "chromatic": "npx chromatic --project-token=chpt_ef424a445a7b8eb",
    "lint": "npm run lint:react",
    "lint:react": "npm run lint --workspace=packages/react",
    "start": "npm run storybook --workspace=packages/react",
    "test": "npm run test --workspace=packages/react",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/qigong",
    "packages/core",
    "packages/react",
    "packages/tokens"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.6",
    "@babel/preset-env": "^7.24.4",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "chromatic": "^11.5.1",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.5.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "^9.0.11",
    "prettier": "^3.3.0",
    "stylelint": "16.6.1",
    "stylelint-config-property-sort-order-smacss": "10.0.0",
    "stylelint-config-standard-scss": "13.1.0"
  },
  "lint-staged": {
    "**/*.{css,sass,scss}": "stylelint --quiet",
    "**/*.{js,jsx}": [
      "prettier --write",
      "eslint --quiet"
    ],
    "**/*.{tsx,ts}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
