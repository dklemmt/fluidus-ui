{
  "compilerOptions": {
    "target": "es2023",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    //    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Bundler mode
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    // Linting
    "noImplicitAny": true,
    "strict": true
  },
  "references": [
    {
      "path": "packages/react"
    }
  ]
}
